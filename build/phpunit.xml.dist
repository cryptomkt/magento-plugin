<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    bootstrap                   = "../tests/bootstrap.php"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    >

    <testsuites>
        <testsuite name="cryptomarket/magento-plugin Test Suite">
            <directory>../tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../app/code/community/Cryptomarket/Core/</directory>
            <directory>../shell</directory>
            <exclude>
                <directory>../app/code/community/Cryptomarket/Core/sql</directory>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="../build/docs/code-coverage" />
        <log type="coverage-clover" target="../build/logs/clover.xml" />
    </logging>
</phpunit>
